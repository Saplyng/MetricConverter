<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/idRadioGroup"
        android:layout_width="240dp"
        android:layout_height="183dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idInputNumber">

        <RadioButton
            android:id="@+id/idFtoC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="F to C" />

        <RadioButton
            android:id="@+id/idInchtoMM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text='" to mm' />

        <RadioButton
            android:id="@+id/idLbtoKg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="lb to kg" />

        <RadioButton
            android:id="@+id/idOztoG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="oz to g" />

    </RadioGroup>

    <TextView
        android:id="@+id/idAnswer"
        android:layout_width="343dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idButton" />

    <EditText
        android:id="@+id/idInputNumber"
        android:layout_width="274dp"
        android:layout_height="88dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="69dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Input"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idButton"
        android:layout_width="239dp"
        android:layout_height="73dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="4dp"
        android:text="Convert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idRadioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>